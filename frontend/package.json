{
  "name": "encam",
  "version": "0.1",
  "description": "Encyclopedia of the CAncer Microenvironment frontend",
  "repository": "git@github.com:NBISweden/encam.git",
  "author": "NBIS",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.2",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.1.0",
    "babel-jest": "^26.0.1",
    "canvas": "^2.6.1",
    "colorthief": "^2.3.0",
    "doctest-ts": "^0.5.0",
    "esbuild": "^0.5.12",
    "jest": "^26.0.1",
    "parcel": "2.0.0-alpha.3.2",
    "prettier": "git://github.com/prettier/prettier.git#22d149b9f6122",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "start": "parcel serve index.html --hmr-port 1235",
    "build": "rm -rf dist; esbuild --bundle src/main.tsx --outdir=dist --loader:.png=file --loader:.svg=file --minify --target=es6 \"--define:VERSION='${VERSION:-unspecified}'\" \"--define:process.env.NODE_ENV='production'\"; cd dist; mv main.js \"main.$(md5sum main.js | head -c 20).js\"; sed \"s,src/main.tsx,$(echo main.*.js),\" < ../index.html > index.html",
    "typecheck": "tsc {src,test}/*.tsx --noEmit --jsx react --lib es2019,dom --skipLibCheck",
    "pretty": "yarn run prettier --list-different --write src test",
    "doctests:gen": "doctest-ts --jest src/*ts* src/**/*ts*",
    "doctests:watch": "ls src/**/* | entr -c sh -c 'yarn run doctests:gen && yarn run jest src --verbose'",
    "test": "yarn run doctests:gen; jest"
  },
  "dependencies": {
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.50",
    "@types/react-router-dom": "^5.1.5",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-is": ">= 16.8.0",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1",
    "vega": "^5.10.0",
    "vega-lite": "^4.7.0",
    "vega-tooltip": "^0.22.1"
  },
  "targets": {
    "browser": {
      "publicUrl": "./"
    }
  },
  "browserslist": [
    "since 2017-06"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "embeddedLanguageFormatting": "off"
  }
}
